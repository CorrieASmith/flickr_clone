<h2><%= @user.username %></h2>
<%= image_tag(@user.avatar.url(:thumb)) %>

<% @user.pictures.each do |picture| %>
  <%= link_to image_tag(picture.image.url, class: 'media-object'), picture.image.url, target: '_blank' %><br>
<% end %>

<br><br>
<%= link_to "Delete Profile", user_path(@user), :data => {:confirm => "Are you sure?", :method => "delete"}, class: "btn btn-danger btn-xs" %>
